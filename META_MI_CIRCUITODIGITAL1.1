module or4bits(S, A,B);

	input [3:0]A;
	input [3:0]B;
	output [3:0]S;
	
	or(S[0],A[0],B[0]);
	or(S[1],A[1],B[1]);
	or(S[2],A[2],B[2]);
	or(S[3],A[3],B[3]);

endmodule

module and4bits(S, A,B);

	input [3:0]A;
	input [3:0]B;
	output [3:0]S;
	
	and(S[0],A[0],B[0]);
	and(S[1],A[1],B[1]);
	and(S[2],A[2],B[2]);
	and(S[3],A[3],B[3]);

endmodule

module xor4bits(S, A,B);

	input [3:0]A;
	input [3:0]B;
	output [3:0]S;
	
	xor(S[0],A[0],B[0]);
	xor(S[1],A[1],B[1]);
	xor(S[2],A[2],B[2]);
	xor(S[3],A[3],B[3]);

endmodule
